@article{comparatEROSITAFinalEquatorial2022,
  title = {The {{eROSITA Final Equatorial Depth Survey}} ({{eFEDS}}). {{X-ray}} Emission around Star-Forming and Quiescent Galaxies at 0.05 {$<$} z {$<$} 0.3},
  author = {Comparat, Johan and Truong, Nhut and Merloni, Andrea and Pillepich, Annalisa and Ponti, Gabriele and Driver, Simon and Bellstedt, Sabine and Liske, Joe and Aird, James and Br{\"u}ggen, Marcus and Bulbul, Esra and Davies, Luke and Villalba, Justo Antonio Gonz{\'a}lez and Georgakakis, Antonis and Haberl, Frank and Liu, Teng and Maitra, Chandreyee and Nandra, Kirpal and Popesso, Paola and Predehl, Peter and Robotham, Aaron and Salvato, Mara and Thorne, Jessica E. and Zhang, Yi},
