@article{blazekSeparatingIntrinsicAlignment2012,
  title = {Separating Intrinsic Alignment and Galaxy-Galaxy Lensing},
  author = {Blazek, Jonathan and Mandelbaum, Rachel and Seljak, Uro{\v s} and Nakajima, Reiko},
